<?xml version="1.0" encoding="UTF-8"?>

<web-app>

  <listener>
    <listener-class>aces.webctrl.postgresql.updater.Main</listener-class>
  </listener>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>WEB</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

  <filter>
    <filter-name>RoleFilterAJAX</filter-name>
    <filter-class>com.controlj.green.addonsupport.web.RoleFilter</filter-class>
    <init-param>
      <param-name>roles</param-name>
      <param-value>view_administrator_only</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>RoleFilterAJAX</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>